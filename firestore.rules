rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function hasForbiddenLocation() {
      return request.resource.data.keys().hasAny(['lat', 'lng', 'latitude', 'longitude', 'coords', 'location']);
    }

    match /signals/{signalId} {
      allow read: if false;
      allow create: if request.auth != null
        && !hasForbiddenLocation()
        && request.resource.data.grid_id is string
        && request.resource.data.source_type in ['public', 'provider', 'org']
        && request.resource.data.category is string
        && request.resource.data.status in ['open', 'closed'];
      allow update, delete: if false;
    }

    match /gridAgg/{gridId} {
      allow read: if true;
      allow write: if false;
    }

    match /resources/{resourceId} {
      allow read: if true;
      allow write: if request.auth != null && !hasForbiddenLocation();
    }

    match /logs/{logId} {
      allow read: if false;
      allow create: if request.auth != null && !hasForbiddenLocation()
        && request.resource.data.grid_id is string
        && request.resource.data.action is string
        && request.resource.data.outcome is string;
      allow update, delete: if false;
    }
  }
}
